# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
#[iface]
#instance=enp2s0
#color=#00FF00
#interval=10
#separator=false

#[wifi]
#instance=wlp3s0
#interval=10
#separator=false

[bandwidth]
label=Net:
align=center
instance=enp2s0
min_width=160
separator=false
interval=5

# Date Time
#
[time]
align=center
min_width=160
separator=false
command=date '+%a %e %b %k:%M'
interval=5

