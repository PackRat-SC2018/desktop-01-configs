# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 3
        separator = ""
        color_good = "#008B8B"
        color_degraded = "#DAA520"
        color_bad = "#CB0043"
}

#order += "ipv6"
#order += "disk /"
#order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"
#
order += "uptime"
order += "sysdata"
# order += "cpu_usage"
# order += "load"
# order += "ethernet enp2s0"
order += "net_rate"
order += "tztime local"

wireless wlp3s0 {
        # format_up = "W: (%quality at %essid) %ip"
        format_up = "W: (%quality)"
        format_down = "W: down"
}

ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = " NET: %ip (%speed) "
        format_down = " NET: down "
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = " %A %e %b  %k:%M "
}

load {
        format = " %1min  %5min  %15min "
}

disk "/" {
        format = "%avail  "
}

cpu_usage {
        format = " CPU: %usage "
        max_threshold = 75
        degraded_threshold = 25
}

# show uptime without zeroes
uptime {
    format = 'Up: [\?if=weeks {weeks} weeks ][\?if=days {days} days ] [\?if=hours {hours} hours ][\?if=minutes {minutes} min. ]'
}

net_rate {
    interfaces = enp2s0
    format = 'Net: {up}  {down}'
}

sysdata {
    format = ' CPU: {cpu_usage}%  {load1} {load5} {load15}   Mem: {mem_used_percent}% '
}