# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = none
        interval = 3
        separator = ""
        #colors = false
        colors = true
        color_good = "#12AD7F"
        color_degraded = "#DBA723"
        color_bad = "#E6171E"
}

#order += "ipv6"
#order += "disk /"
#order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"

#order +=  "cpu_temperature 0"
#order +=  "cpu_temperature 1"
order += "cpu_usage"
order += "load"
order +=  "cpu_temperature 2"
order += "battery 0"
order += "wireless wlp1s0"
order += "tztime local"
# order += "time"

cpu_temperature 0 {
        format = " CORE0: %degrees °C "
        max_threshold = 75
        #format_above_threshold = Warning T above threshold: %degrees °C
    path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp2_input
}

cpu_temperature 1 {
        format = " CORE1: %degrees °C "
        max_threshold = 75
        #format_above_threshold = Warning T above threshold: %degrees °C
    path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp4_input
}

# toshiba
cpu_temperature 2 {
        format = " %degrees °C "
        max_threshold = 75
        #format_above_threshold = Warning T above threshold: %degrees °C
        path = /sys/class/hwmon/hwmon1/temp1_input
        align = "center"
        min_width = "64"
}

cpu_usage {
        format = " CPU: %usage "
        max_threshold = 75
        degraded_threshold = 25
}

load {
        format = " %1min  %5min  %15min "
}

battery 0 {
        format = " BATT: %percentage %remaining %status "
        hide_seconds = true
        integer_battery_capacity = true
        threshold_type = percent
        low_threshold = 15
        status_chr = "C"
        status_bat = "D"
        status_unk = "?"
        status_full = "F"
}

wireless wlp1s0 {
        format_up = " NET: %quality %bitrate "
        format_down = " NET: down "
}

tztime local {
        format = " %time "
        format_time = "%a %e %b %k:%M"
}

######################################################
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "%avail  "
}
