conky.text = [[
${goto 12}Uptime:${offset 8}${uptime_short}${offset 18} \
${goto 480}CPU:${offset 8}${if_match ${cpu}<=50}${color7}${else}${if_match ${cpu}<=70}${color8}${else}${if_match ${cpu}>70}${color9}${endif}${endif}${endif}${cpu cpu0}%${color} \
${offset 24}${loadavg 1}${offset 10}${loadavg 2}${offset 10}${loadavg 3} \
${goto 960}MEM:${offset 8}${if_match ${memperc}<=50}${color7}${else}${if_match ${memperc}<=70}${color8}${else}${if_match ${memperc}>70}${color9}${endif}${endif}${endif}${memperc}%${color} \
${goto 1440}Net:${offset 24}Up:${offset 10}${upspeedf enp2s0}${offset 40}Down:${offset 10}${downspeedf enp2s0}${color} \
${alignr 12}${time %R}
]];
