conky.text = [[
${voffset 4}${alignc}${font Fira Code:light:size=16}${time %R}${font}
${voffset 8}${alignc}${time %a %e %b}
${voffset 24}Uptime:${alignr}${uptime_short}
${voffset 16}CPU:${alignr}${if_match ${cpu}<=50}${color7}${else}${if_match ${cpu}<=70}${color8}${else}${if_match ${cpu}>70}${color9}${endif}${endif}${endif}${cpu cpu0}%${color}
${voffset 4}${alignr}${loadavg}
${voffset 16}Mem:${alignr}${if_match ${memperc}<=50}${color7}${else}${if_match ${memperc}<=70}${color8}${else}${if_match ${memperc}>70}${color9}${endif}${endif}${endif}${memperc}%${color}
${voffset 16}Net:${alignr}${upspeedf enp2s0} kb/s
${voffset 4}${alignr}${downspeedf enp2s0} kb/s
]];
