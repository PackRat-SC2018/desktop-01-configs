
##########	AlterState FVWM Script
##########	Computer state manager
##########	by sebaro
##########
##########	rev.2012-08-01

WindowTitle {AlterState}
WindowSize 320 160

##### Global Style
Colorset 10

Init
Begin
  ##### Settings
  Set $homeDir = (GetOutput {echo $HOME} 1 -1) {/.fvwm/scripts/AlterState/}
  Set $rebootCommand = {reboot}
  Set $shutdownCommand = {halt}

  ##### Widgets
  Set $restartIcon = $homeDir {icons/restart.png}
  ChangeIcon 1 $restartIcon
  Set $quitIcon = $homeDir {icons/exit.png}
  ChangeIcon 2 $quitIcon
  Set $rebootIcon = $homeDir {icons/reboot.png}
  ChangeIcon 3 $rebootIcon
  Set $shutdownIcon = $homeDir {icons/shutdown.png}
  ChangeIcon 4 $shutdownIcon
  Set $quitButton = $homeDir {icons/quit.png}
  ChangeIcon 5 $quitButton
End

Widget		1
Property
  Type		ItemDraw
  Size		48 48
  Position		25 50
  Flags		NoFocus NoReliefString
Main
  Case message of
    SingleClic :
    Begin
      Do {Restart}
    End
  End

Widget		2
Property
  Type		ItemDraw
  Size		48 48
  Position		99 50
  Flags		NoFocus NoReliefString
Main
  Case message of
    SingleClic :
    Begin
      Do {Quit}
    End
  End

Widget		3
Property
  Type		ItemDraw
  Size		48 48
  Position		173 50
  Flags		NoFocus NoReliefString
Main
  Case message of
    SingleClic :
    Begin
      Do {exec } $rebootCommand
    End
  End

Widget		4
Property
  Type		ItemDraw
  Size		48 48
  Position		247 50
  Flags		NoFocus NoReliefString
Main
  Case message of
    SingleClic :
    Begin
      Do {exec } $shutdownCommand
    End
  End

Widget		5
Property
  Type		ItemDraw
  Size		16 16
  Position		303 1
  Flags		NoFocus NoReliefString
Main
  Case message of
    SingleClic :
    Begin
      Quit
    End
  End
