WindowTitle {DateTime}
WindowSize  120 28
Font "xft:Roboto Mono:style=Regular:size=11" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %e %b"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %e %b"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 120 14
 Font "xft:Roboto Mono:style=Bold:size=9"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 0 20
 Size 120 14
 Font "xft:Sans:style=Regular:size=9"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
