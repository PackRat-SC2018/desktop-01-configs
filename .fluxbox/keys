#XF86AudioMute :Exec pamixer -t
#XF86AudioPlay :Exec playerctl play-pause

XF86AudioPrev :Exec playerctl previous
XF86AudioNext :Exec playerctl next

Menu :Exec thunar
XF86HomePage :Exec wmctrl -a firefox || firefox
XF86Mail :Exec wmctrl -a thunderbird || thunderbird
XF86Tools :Exec st -e tmux
XF86Calculator :Exec Exec wmctrl -a xcalc || xcalc
Control Mod4 g :Exec wmctrl -a gimp || gimp
Control Mod4 l :Exec wmctrl -a subl3 || subl3
Control Mod4 p :Exec wmctrl -a libreoffice --calc || libreoffice --calc
Control Mod4 o :Exec wmctrl -a libreoffice --writer || libreoffice --writer
Mod4 q :Restart
Mod4 Shift q :Exec /usr/local/bin/void-logout
Control Mod4 Pause :Exec ConkyFluxbox.sh
Control Mod4 w :Exec PMWeather.sh
Control Mod4 b :Exec ConkyTao.sh
Control Mod4 Print :Exec "$HOME/bin/scrot_delay.sh"
Mod4 Shift Print :Exec st -title screenshot -e pmsshot
